@model CompanyInvoiceApp.UI.Model.Company

@{
    ViewData["Title"] = "Create Company";
}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="CompanyName" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CompanyName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ContactEmailId" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="email" asp-for="ContactEmailId" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AddressLine1" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AddressLine1" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AddressLine2" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AddressLine2" class="form-control" />
                </div>
            </div>

            
            <div class="form-group row">
                <label asp-for="AddressLine3" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AddressLine3" class="form-control" />
                </div>
            </div>

            
            <div class="form-group row">
                <label asp-for="ZipCode" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ZipCode" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
